---
import DogLayout from './../../layouts/DogLayout.astro'
import Carousel from './../../components/Carousel.astro'
import { translations } from '../../locales/translations'

const images = ['./../../images/Berlin_nasi_psi_02.jpg', './../../images/Berlin_nasi_psi_03.jpg']
---

<DogLayout title="Benny">
	<div
		slot="dog_info"
		class="flex flex-col lg:justify-center lg:items-end md:items-end items-center lg:gap-2 gap-1 lg:w-1/3 w-full"
	>
		<p>Berlin Mattien Rhodenny (Benny)</p>
		<p>Datum narození: 13.10.2020</p>
		<p>Výška: 69cm</p>
		<p>Váha: 44kg</p>
		<p>Plnochrupý, nůžkový</p>
		<p>Pšeničná barva</p>
		<p>HD: 0/0</p>
		<p>ED: 0/0</p>
		<p>OCD - negativni</p>
		<p>SA - negativní</p>
		<p>LTV - negativní</p>
		<p>L7 - normal</p>
		<p>Ridge gene - R/R</p>
		<p>DM: N/N</p>
		<p>JME: N/N</p>
		<p>D-locus: D/D</p>
		<p>B-locus: B/b</p>
		<p>Hemofilie: A/B - čístá</p>
		<p>Bonitace proběhla 16.06.2023</p>
		<p>Majitelka: Petra Běhounková</p>
	</div>
	<div slot="carousel" class="lg:w-3/4 w-full">
		<Carousel images={images} />
	</div>

	<div
		slot="mother_info"
		class="flex flex-col lg:justify-center lg:gap-4 gap-2 px-4 lg:p-0 whitespace-nowrap md:items-end"
	>
		<p>Matka: Enny Joy of Ashanti South Moravia</p>
		<p>Datum narození: 25.06.2015</p>
		<p>Výška: 64cm</p>
		<p>Váha: 39kg</p>
		<p>Plnochrupý, nůžkový kus</p>
		<p>Pšeničná barva</p>
		<p>HD: A/A</p>
		<p>ED: 0/0</p>
		<p>OCD - negativní</p>
	</div>
	<img
		slot="mother_image"
		src="./../../images/enny_nasi_psi_01.jpg"
		alt=""
		class="max-w-sm aspect-square object-top object-cover rounded-lg"
	/>
	<div
		slot="father_info"
		class="flex flex-col justify-center lg:gap-4 gap-2 md:items-start lg:p-0 whitespace-nowrap md:order-1"
	>
		<p>Otec: Bayo Kendi Kaweria (Charlie)</p>
		<a class="underline" target="_blank" href="https://www.kaweria.com/"
			>Informace o Charlie najdete ZDE</a
		>
	</div>
	<img
		slot="father_image"
		src="./../../images/kemdi_bizzete_02.jpg"
		class="max-w-sm aspect-square object-top object-cover rounded-lg"
		alt=""
	/>
</DogLayout>
<div class="flex flex-col lg:flex-row justify-center items-center lg:gap-8 md:gap-4 pb-4">
	<div class="flex flex-col justify-center items-center lg:gap-4 md:gap-2">
		<p>Ashanti South Moravia</p>
		<img
			src="./../../images/ashanti_nasi_psi.jpg"
			class="max-w-60 aspect-square object-top object-cover rounded-lg"
			alt=""
		/>
	</div>
	<div class="flex flex-col justify-center items-center lg:gap-4 md:gap-2">
		<p>Kifahari Kuzaa Eros Dahabu</p>
		<img
			src="./../../images/kifahari_nasi_psi.jpg"
			class="max-w-60 aspect-square object-top object-cover rounded-lg"
			alt=""
		/>
	</div>
	<div class="flex flex-col justify-center items-center lg:gap-4 md:gap-2">
		<p>Tusani Jolly Joelin</p>
		<img
			src="./../../images/hugo_matka.jpg"
			class="max-w-60 aspect-square object-top object-cover rounded-lg"
			alt=""
		/>
	</div>
	<div class="flex flex-col justify-center items-center lg:gap-4 md:gap-2">
		<p>Bayo Bombay of Argos</p>
		<img
			src="./../../images/bayo_bombay.jpg"
			class="max-w-60 aspect-square object-top object-cover rounded-lg"
			alt=""
		/>
	</div>
</div>
<div class="flex flex-col justify-center items-center lg:py-8 gap-4">
	<img
		src="./../../images/Berlin_nasi_psi_01.jpg"
		alt=""
		class="flex flex-col lg:w-1/3 w-full rounded-lg"
	/>
	<div class="uppercase text-xl lg:text-2xl lg:pt-4">
		<p>Průkaz původu psa</p>
	</div>
	<div class="flex flex-col lg:py-4 md:pt-4 justify-center items-center gap-4">
		<a
			target="_blank"
			download="dokumenty_01.jpg"
			href="https://drive.google.com/file/d/1Ftek8iQvwfPnK9ip10HlBOt6F0Uc8z_i/view?usp=sharing"
			class="button-secondary flex gap-2 items-center w-fit"
		>
			<span>Zobrazit</span><svg
				class="w-4 h-auto"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 256 256"
				><rect width="256" height="256" fill="none"></rect><line
					x1="40"
					y1="128"
					x2="216"
					y2="128"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="16"></line><polyline
					points="144 56 216 128 144 200"
					fill="none"
					stroke="currentColor"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="16"></polyline></svg
			></a
		>
		<img
			src="./../../images/berlin_prukaz-1.png"
			alt=""
			class="md:w-full 2 lg:w-1/3 rounded-lg mx-auto"
		/>
	</div>
</div>
<div class="flex flex-col lg:flex-row justify-center items-center gap-4 py-2">
	<img
		src="./../../images/zprava_bertik.jpg"
		alt=""
		class="flex flex-col lg:w-1/3 w-full rounded-lg"
	/>
	<img
		src="./../../images/zprava_bertik-1.jpg"
		alt=""
		class="flex flex-col lg:w-1/3 w-full rounded-lg"
	/>
</div>
<div class="flex flex-col lg:flex-row justify-center items-center gap-4 py-2">
	<img
		src="./../../images/zprava_bertik-2.jpg"
		alt=""
		class="flex flex-col lg:w-1/3 w-full rounded-lg"
	/>
	<img
		src="./../../images/zprava_bertik-3.jpg"
		alt=""
		class="flex flex-col lg:w-1/3 w-full rounded-lg"
	/>
</div>
