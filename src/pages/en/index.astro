---
import MainLayoutEn from './../../layouts/MainLayoutEn.astro'
import { translations } from './../../locales/translations'
---

<MainLayoutEn>
	<div class="flex-1 grid lg:place-items-center">
		<div class="flex flex-col lg:flex-row lg:*:flex-1 gap-8 lg:gap-0">
			<div class="flex flex-col lg:justify-center items-center gap-4">
				<div
					class="lg:w-1/2 w-full flex flex-col gap-4 justify-center items-center px-2 lg:px-0 slideInDown"
				>
					<img
						src="./../images/logo_rhodenyy.png"
						alt="Logo"
						class="block w-full h-auto object-fit-contain"
					/>
					<div class="text-citat">
						<div class="uppercase text-xl lg:text-2xl text-center italic">
							{translations.en.index_motive}
						</div>
					</div>
				</div>
			</div>
			<div
				class="relative after:hidden lg:after:block after:w-20 after:h-20 after:bg-purple-400 after:absolute after:-top-8 after:-left-6 after:rounded-full after:-z-20 px-2 lg:pr-4 flex-1"
			>
				<img
					src="./../images/RRhodenny_index_background.jpg"
					alt=""
					class="w-full h-full lg:h-auto block bg-center object-cover lg:object-contain lg:rounded-l-xl rounded-xl shadow-2xl"
				/>
			</div>
		</div>
	</div>
</MainLayoutEn>
